<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_color_white"
    >

  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/logoutTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="24dp"
      android:layout_marginEnd="24dp"
      android:background="@drawable/shape_button"
      android:backgroundTint="@color/colorPrimaryDark"
      android:text="@string/label_logout"
      android:textColor="@color/colorAccent"
      android:textSize="@dimen/material_typography_tall_body_1_text_size"
      app:fontFamily="@font/lato_bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <android.support.constraint.Guideline
      android:id="@+id/guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_begin="?attr/actionBarSize"
      />

  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/greetingsTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="24dp"
      android:layout_marginTop="8dp"
      android:text="@string/label_user_greetings"
      android:textColor="@color/material_color_grey_600"
      android:textSize="@dimen/material_typography_regular_title_text_size"
      app:fontFamily="@font/lato_bold"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/guideline"
      />

  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/appCompatTextView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="24dp"
      android:layout_marginTop="8dp"
      android:text="@string/label_welcome_message"
      android:textColor="@color/material_color_grey_600"
      android:textSize="@dimen/material_typography_regular_title_text_size"
      app:fontFamily="@font/lato_bold"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/greetingsTextView"
      />


</android.support.constraint.ConstraintLayout>